<% extend('layout') %>

<div class="container mt-4">
    <h1>Lista dei Biglietti</h1>

    <table class="table mt-4">
        <thead>
        <tr>
            <th scope="col">ID Biglietto</th>
            <th scope="col">Tipo Biglietto</th>
            <th scope="col">Prezzo</th>
            <th scope="col">Codice Sigillo</th>
            <th scope="col">Stato</th>
            <th scope="col">Timestamp</th>
        </tr>
        </thead>
        <tbody>
        <% for(let item of results) { %>
            <tr>
                <th scope="row"><%= item.id %></th>
                <th scope="row">
                    <% if(item.typeb === '0'){ %>
                        Platinum
                    <% } else if (item.typeb === '1'){ %>
                        Gold
                    <% } else { %>
                        Standard
                    <% } %>
                </th>
                <th scope="row"><%= item.prezzo %></th>
                <th scope="row"><%= item.cod_sigillo %></th>
                <th scope="row"><%= item.state %></th>
                <th scope="row"><%= item.timestamp %></th>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
