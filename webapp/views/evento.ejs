<% extend('layout') %>

<div class="container mt-4">
    <h1 class="mb-3">Evento "<%= result.titolo %>"</h1>

    <div class="col">
        <div class="row">
            <p><b>ID Evento:</b> <%= result.id %></p>
        </div>
        <div class="row">
            <p><b>Luogo Evento:</b> <%= result.luogo %></p>
        </div>
        <div class="row">
            <p><b>Data Evento:</b> <%= result.data %></p>
        </div>
        <div class="row">
            <p><b>Orario Evento:</b> <%= result.orario %></p>
        </div>
        <div class="row">
            <p><b>Artista Evento:</b> <%= result.artista %></p>
        </div>
        <div class="row">
            <p><b>Capienza Evento:</b> <%= result.remainingSlots + '/' + result.capienza %></p>
        </div>
        <div class="row">
            <p><b>Stato Evento:</b> <%= result.stato %></p>
        </div>
        <% if(result.stato === 'Attivo') { %>
            <div class="row mt-2">
                <a class="btn btn-primary" href="/evento/id/<%= result.id %>/acquistabiglietto">Acquista Biglietto</a>
            </div>
            <div class="row mt-2">
                <a class="btn btn-primary" href="/evento/id/<%= result.id %>/concludiEvento">Concludi Evento</a>
            </div>
            <div class="row mt-2">
                <a class="btn btn-primary" href="/evento/id/<%= result.id %>/annullaEvento">Annulla Evento</a>
            </div>
        <% } %>
    </div>
</div>